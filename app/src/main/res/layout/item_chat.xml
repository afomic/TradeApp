<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@color/colorWhite"
    android:layout_height="wrap_content">
    <ImageView
        android:padding="@dimen/dimen_8"
        android:id="@+id/imv_recipient_initials"
        android:layout_width="60dp"
        android:layout_margin="4dp"
        android:layout_height="60dp"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:padding="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:text="Anonymous developer"
                android:id="@+id/tv_recipient"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_weight="1"
                android:textSize="18sp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="2hrs ago"
                android:padding="4dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:id="@+id/tv_last_update"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="i will buy it all sir"
                android:maxLines="1"
                android:ellipsize="end"
                android:id="@+id/tv_last_message"
                android:padding="4dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:text="13"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginRight="8dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/unread_message_count_background"
                android:id="@+id/tv_unread_messages"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>


</LinearLayout>